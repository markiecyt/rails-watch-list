<div class="container">
  <h1><%= @list.name %></h1>
    <% @list.bookmarks.each do |bookmark|%>
      <div class="card">
        <h2><%= bookmark.movie.title %></h2>
        <%= link_to 'Remove', bookmark_path(bookmark), method: :delete, data: { confirm: 'Confirm to remove from the list?' } %>
      </div>
    <% end %>
  <%= link_to 'Bookmark a movie', new_list_bookmark_path(@list)  %>
</div>
