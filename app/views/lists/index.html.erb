<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://d2fy2et424xkoh.cloudfront.net/blog/wp-content/uploads/2019/08/Banner2.jpg);">
  <div class="container">
    <h1>Enjoy your movie night!</h1>
  </div>
</div>

<div class="col p-4 mt-2">
  <h1>All lists</h1>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="card my-4 mx-auto text-decoration-none" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? "#{cl_image_path(list.photo.key)}"  : image_path(list.movies.pluck(:poster_url).sample || image_path('default.jpg')) %>)">
          <p class="card-link text-decoration-none"><%= list.name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
