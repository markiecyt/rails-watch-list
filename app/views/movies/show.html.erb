<div class="container pt-5">
  <div class="movie-page d-flex flex-column flex-md-row mt-5 py-5">
    <img src="<%= @movie.poster_url %>" alt="Movie image" class="movie-image d-flex">
    <div class="w-100 ms-md-5 mt-5 mt-md-0">
      <div class="movie-details pe-md-5">
        <h2>
          <%= @movie.title %>
          <span>(<%= @movie.rating %>/10)</span>
        </h2>
        <p><%= @movie.overview %></p>
        <div class="cards">
          <% @movie.lists.each do |list| %>
            <%= render partial: "lists/card", locals: {list: list} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
